<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GIFSearch" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextStyleHeading" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black_870</item>
        <item name="android:textSize">@dimen/text_heading</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:lineSpacingExtra">0.5dp</item>
    </style>

    <style name="TextStyleTitle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black_870</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:lineSpacingExtra">0.5dp</item>
    </style>


    <style name="TextStyleSubTitle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black_870</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:lineSpacingExtra">0.5dp</item>
    </style>

    <style name="TextStyleContent" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black_600</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:lineSpacingExtra">0.5dp</item>
    </style>
</resources>